<Window x:Class="Pomoberry.UI.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomoberry.UI"
        mc:Ignorable="d"
        Title="Pomoberry" Height="400" Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
           x:Name="SessionDisplay"
           Text="Work"
           FontSize="24"
           Foreground="White"
           HorizontalAlignment="Center"
           Margin="0,20,0,0"/>

        <TextBlock Grid.Row="1"
           x:Name="TimeDisplay"
           Text="25:00"
           FontSize="80"
           FontWeight="Bold"
           Foreground="White"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>

        <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,30">
            <Button x:Name="StartButton" Content="Start" Width="80" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="PauseButton" Content="Pause" Width="80" Margin="5" Click="PauseButton_Click"/>
            <Button x:Name="ResetButton" Content="Reset" Width="80" Margin="5" Click="ResetButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
